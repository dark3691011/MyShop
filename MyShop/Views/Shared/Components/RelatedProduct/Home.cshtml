@{
    var data = ViewBag.Data ?? new List<ProductViewModel>();
    string type = "San pham moi nhat";
}
<!-- letest product section -->
<section class="top-letest-product-section">
    <div class="container">
        <div class="section-title">
            <h2>LATEST PRODUCTS</h2>
        </div>
        <div class="product-slider owl-carousel">
            @for (int i = 0; i < 5; i++)
            {
                <div class="product-item">
                    <div class="pi-pic">
                        <a title="@data[i].ProductName" href="/@type.ToUrlFriendly()/@data[i].ProductNameSeoUrl">
                            <img src="~/img/product/@data[i]?.ProductImage" alt="">
                        </a>
                        <div class="pi-links">
                            <form asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@data[i].ProductID" asp-route-qty=1 method="post">
                                <button class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></button>
                            </form>

                            <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                        </div>
                    </div>
                    <div class="pi-text">
                        <h6>@data[i]?.UnitPrice VND</h6>
                        <p>@data[i]?.ProductName</p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- letest product section end -->
