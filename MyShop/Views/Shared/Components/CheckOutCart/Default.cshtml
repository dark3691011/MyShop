@model IEnumerable<CartItem>

<div class="col-lg-4 order-1 order-lg-2">
    <div class="checkout-cart">
        <h3>Your Cart</h3>
        <ul class="product-list">
            @foreach (var item in Model)
            {
            <li>
                <div class="pl-thumb"><img src="~/Img/product/@item.Product.ProductImage" alt=""></div>
                <h6>@item.Product.ProductName</h6>
                <p>@item.TotalPrice VND</p>
            </li>
            }
        </ul>
        <ul class="price-list">
            <li>Total<span>@Model.Sum(p => p.TotalPrice) VND</span></li>
            <li>Shipping<span>free</span></li>
            <li class="total">Total<span>@Model.Sum(p => p.TotalPrice)</span></li>
        </ul>
    </div>
</div>