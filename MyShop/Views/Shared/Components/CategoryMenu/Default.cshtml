@model IEnumerable<MyShop.Models.ProductType>
@{
    var fatherProductTypes = Model.Where(p => p.FatherTypeID == null);
}



<ul class="sub-menu">
    @foreach (var productType in fatherProductTypes)
    {
        <li>
            <a asp-controller="Product" asp-action="Category" asp-route-loai="@productType.TypeNameSeoUrl">@productType.TypeName</a>
        </li>
    }
</ul>
