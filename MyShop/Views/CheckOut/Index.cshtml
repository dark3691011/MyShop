@model MyShop.ViewModels.CheckOutViewModel

<!-- checkout section  -->
<section class="checkout-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 order-2 order-lg-1">
                <form class="checkout-form" asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerID" />
                    <div class="cf-title">Billing Address</div>

                    <div class="row address-inputs">
                        <div class="col-md-12">
                            <p>Tên khách hàng:</p>
                            <input type="text" asp-for="Name" placeholder="Name" value="@Model.Name">
                            <p>Địa chỉ:</p>
                            <input type="text" asp-for="Addres" placeholder="Address" value="@Model.Addres">
                            <p>Số điệnt thoại:</p>
                            <input type="text" asp-for="PhoneNumber" placeholder="Phone number" value="@Model.PhoneNumber">
                        </div>
                    </div>
                    <div class="cf-title">Delievery Info</div>
                    <div class="row shipping-btns">
                        <div class="col-6">
                            <h4>Standard</h4>
                        </div>
                        <div class="col-6">
                            <div class="cf-radio-btns">
                                <div class="cfr-item">
                                    <input type="radio" name="shipping" id="ship-1">
                                    <label for="ship-1">Free</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4>Next day delievery  </h4>
                        </div>
                        <div class="col-6">
                            <div class="cf-radio-btns">
                                <div class="cfr-item">
                                    <input type="radio" name="shipping" id="ship-2">
                                    <label for="ship-2">$3.45</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cf-title">Payment</div>
                    <ul class="payment-list">
                        <li>Paypal<a href="#"><img src="~/img/paypal.png" alt=""></a></li>
                        <li>Credit / Debit card<a href="#"><img src="~/img/mastercart.png" alt=""></a></li>
                        <li>Pay when you get the package</li>
                    </ul>
                    <button class="site-btn submit-order-btn">Thanh toán</button>
                </form>
            </div>
            @await Component.InvokeAsync("CheckOutCart")
        </div>
    </div>
</section>
<!-- checkout section end -->
