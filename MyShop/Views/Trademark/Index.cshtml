@model IEnumerable<MyShop.Models.Trademark>


<!-- Category section -->
<section class="category-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12  order-1 order-lg-2 mb-5 mb-lg-0">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="product-item">
                                <div class="pi-pic">
                                    <a asp-controller="Trademark" asp-action="Details" asp-route-id="@item.TrademarkID"><img src="~/Img/logo/@item.Logo" alt=""></a>
                                </div>
                                <div class="pi-text">
                                    <p>@item.Name</p>
                                </div>
                            </div>
                        </div>
                    }
                        <div class="text-center w-100 pt-3">
                            <button class="site-btn sb-line sb-dark">LOAD MORE</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</section>
<!-- Category section end -->
